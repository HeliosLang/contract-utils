{
    "name": "@helios-lang/contract-utils",
    "version": "0.1.24",
    "description": "Convenience and type-safety utilities for using Helios validators from within Typescript",
    "main": "src/index.js",
    "types": "types/index.d.ts",
    "type": "module",
    "bin": {
        "hl2ts": "src/hl2ts.js"
    },
    "scripts": {
        "build": "npm run build:types",
        "build:types": "npx tsc -p jsconfig.json --noEmit false --emitDeclarationOnly",
        "prepack": "npm run test:pretty && npm run test:suite && npm run build",
        "prettify": "npx prettier . --write",
        "test": "npm run test:pretty && npm run test:types && npm run test:suite",
        "test:pretty": "npx prettier . --check",
        "test:suite": "node --test  --experimental-test-coverage",
        "test:types": "npm run build:types"
    },
    "author": "Christian Schmitz",
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@types/node": "^20.11.24",
        "prettier": "^3.1.0",
        "typescript": "^5.3.2"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false
    },
    "peerDependencies": {
        "@helios-lang/compiler": "*"
    },
    "dependencies": {
        "@helios-lang/cli-utils": "^0.1.2",
        "@helios-lang/codec-utils": "^0.1.27",
        "@helios-lang/compiler-utils": "^0.1.21",
        "@helios-lang/ledger": "^0.1.21",
        "@helios-lang/type-utils": "^0.1.8",
        "@helios-lang/uplc": "^0.1.22"
    }
}
